<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="vendor/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/application.css">

  <title></title>
</head>
<body>

   <header class="navbar navbar-inverse navbar-static-top" id="main-header">
      <nav class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Prosperi.ty</a>
        </div>
        <% unless logged_in? %>
          <%= erb :"/partials/_login" %>
        <% else %>
          <%= erb :"/partials/_user_links" %>
        <% end %>
      </nav>
    </header>

    <% if flash[:notice] %>
    <div class="alert alert-success flash-sinatra-message" role="alert">
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
       <%= flash[:notice]%>
    </div>
    <% end %>

    <% if flash[:error] %>
    <div class="alert alert-warning flash-sinatra-message" role="alert">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
       <%= flash[:error] %>
    </div>
    <% end %>

    <%= yield %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script src="vendor/js/bootstrap.min.js"></script>
    <script src="/js/application.js"></script>
    <script src="/js/animations.js"></script>

</body>
</html>
